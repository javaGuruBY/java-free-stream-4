    public static void main(String[] args) {


            int firstRandomNumber  = (int) (Math.random() *(100+1));
            int secondRandomNumber = (int) (Math.random() *(100+1));
            int thirdRandomNumber  = (int) (Math.random() *(100+1));

            int sumOfRandomNumbers = firstRandomNumber + secondRandomNumber + thirdRandomNumber;

            System.out.println("First random number   = " + firstRandomNumber);
            System.out.println("Second random number  = " + secondRandomNumber);
            System.out.println("Third random number   = " + thirdRandomNumber);
            System.out.println("\nSum = " + sumOfRandomNumbers);

    }
}
